@using Ponant.Medical.Shore.Models
@model LoginViewModel

@{
    ViewBag.Title = "Connection";
}

<section id="intro">
    <img src="~/images/logo2.jpg" class="pull-right logo" />
    <p>Welcome to the Ponant medical survey management application.</p>
    <p>The purpose of this application is to monitor the status of cruise passengers requiring medical advice to embark.</p>
    <p>For further questions, please contact the IT department.</p>
</section>
<div class="clearfix"></div>
<section id="form">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h2>@ViewBag.Title</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        if (TempData["ErrorMessage"] != null)
        {
            <div id="errorAlert" class="alert alert-danger" role="alert">@TempData["ErrorMessage"]</div>
        }
        <div class="form-group">
            @Html.LabelFor(m => m.Login, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sign in" class="btn btn-primary" />
            </div>
        </div>
    }
</section>
